<p>
Add an event to the <b><%= @timeline.name %></b> timeline. (<%= link_to "Choose other timeline", root_path %>)
</p>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% @event.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


<%= form_for @event, :url => timeline_events_path do |f| %>
  <p>
    <%= f.label :event_date %><br />
    <%= f.text_field :event_date %>
  </p>
  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :short_description %><br />
    <%= f.text_field :short_description, :size => 65 %>
  </p>
  <p>
    <%= f.label :detailed_description %><br />
    <%= f.text_area :detailed_description, :cols =>75, :rows => 4 %>
  </p>
  <p>
    <%= f.submit "Add Event to the #{ @timeline.name } timeline" %>
  </p>

<% end %>

<br />
timeline - <%= @timeline.inspect %>
