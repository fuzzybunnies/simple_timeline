<p id="notice"><%= notice %></p>

<h1><%= @timeline.name %></h1>
<div class="timeline-description">
  <p>
    <%= @timeline.description %>
  </p>
</div>
<% @timeline.events.each do | event | %>
<div class="event-container">
  <p class="event-info">
    <%= event.title %> <%= format_event_date_info(event) %> (<%= link_to "edit", edit_timeline_event_path(@timeline, event) %>)
  </p>
  <div class="event-descriptions">
    <p>
      <%= event.short_description %>
    </p>
    <p>
      <%= event.detailed_description %>
    </p>
  </div>
  <div class="image-container">
    <% event.images.each do |event_image| %>
      <% if event_image.image.url %>
      <%= image_tag event_image.image.url(:medium) %>
      <% end %>
    <% end %>    
  </div>
</div>
<% end %>
